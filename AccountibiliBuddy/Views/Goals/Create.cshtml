@model AccountibiliBuddy.Models.ViewModels.GoalViewModel
@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Goal</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Goal.Name" class="control-label"></label>
                <input asp-for="Goal.Name" class="form-control" />
                <span asp-validation-for="Goal.Name" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                <label asp-for="Goal.Date" class="control-label"></label>
                <input asp-for="Goal.Date" class="form-control"  />
                <span asp-validation-for="Goal.Date" class="text-danger"></span>
            </div>
            <div class="form-group"> 
                <label  class="control-label"></label>
                <select asp-for="Goal.GoalTypeId" asp-items="@Model.GoalTypes" > </select>
                <span asp-validation-for="Goal.GoalTypeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
